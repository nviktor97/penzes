<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BeallitasokFTorol">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/cimsorBar"
        app:cardCornerRadius="15dp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/cimsorText"
                app:cardCornerRadius="15dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView34"
                        style="@style/controlActionLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/BeallitasokFIOKT"
                        android:textAllCaps="true"
                        android:textColor="@color/cimsorTextB"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:typeface="normal" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@color/elvetesGomb"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:contentPadding="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView38"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:justificationMode="inter_word"
                                android:padding="5dp"
                                android:text="Kérlek erősítsd meg a fiókod törlését, a törlés gombra kattintva!"
                                android:textAlignment="center"
                                android:textColor="@color/cimsorText"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="191dp"
                            android:layout_gravity="center|center_horizontal"
                            app:srcCompat="@drawable/trash_pic" />
                    </TableRow>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@color/cimsorText"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:contentPadding="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/twdelete"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:justificationMode="inter_word"
                                android:text="@string/BeallitasokFIOKTorolT1"
                                android:textAlignment="center"
                                android:textColor="@color/cimsorTextB"
                                android:textSize="18sp"
                                android:textStyle="normal|bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        app:cardBackgroundColor="@color/cimsorBar"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:contentPadding="5dp">

                        <Button
                            android:id="@+id/TOROL_OK"
                            style="@style/controlButtonView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cimsorBar"
                            android:drawableLeft="@drawable/deleteprofile"
                            android:drawablePadding="20dp"
                            android:paddingLeft="5dp"
                            android:text="@string/Töröl"
                            android:textColor="@color/cimsorText"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>